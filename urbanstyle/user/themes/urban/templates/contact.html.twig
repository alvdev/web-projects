{% extends 'partials/base.html.twig' %}

{% block content %}
    <main class="flex-1 prose prose-xl max-w-none">
        <section>
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3038.7357061946236!2d-3.704869124079127!3d40.39254985711087!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd418909bc1f734b%3A0xf9f7d7df34c0e583!2sUrban%20Style%20Publicity!5e0!3m2!1sen!2ses!4v1689272129273!5m2!1sen!2ses"
                width="100%"
                height="400"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </section>

        <section class="container mt-24 grid grid-cols-2 gap-24 items-center">
            <div>
                <h1>
                    Escribe, llama o visítanos en nuestras oficinas
                </h1>
                <p>
                    Contáctanos para poder trabajar juntos y crear una campaña estratégica que se adapte a un presupuesto y a una audiencia
                    concreta.
                </p>
            </div>
            <div>
                {% include "forms/form.html.twig" with {form: forms('contact')} %}
            </div>
        </section>

        <section class="container mt-24 grid grid-cols-2 gap-24 text-center">
            <div>
                <h3>
                    Madrid
                </h3>
                <img src="{{ url('theme://images/madrid.webp') }}" alt="Empresa de pegada de carteles en Madrid" class="m-0">
            </div>
            <div>
                <h3>
                    Barcelona
                </h3>
                <img src="{{ url('theme://images/barcelona.webp') }}" alt="Empresa de pegada de carteles en Barcelona" class="m-0">
            </div>
        </section>
    </main>
{% endblock %}
