<section class="mt-24">
    <h2 class="text-5xl font-bold">
        {{ header.title }}
    </h2>

    <div class="container {{ (header.title or header.subtitle) ? 'mt-28' : '' }}">
        <div class="gap-4 md:columns-2 lg:columns-3 ring-16 ring-white bg-white space-y-4 [&>div]:break-inside-avoid-column">
            {% for item in header.benefits %}
                {% if item.title or item.description %}
                    <div class="p-8 bg-white border border-black text-balance">
                        {% if item.title %}
                            <h3 class="text-2xl font-semibold">
                                {{ item.title }}
                            </h3>
                        {% endif %}

                        {% if item.description %}
                            <p class="mt-4">
                                {{ item.description }}
                            </p>
                        {% endif %}
                    </div>
                {% endif %}

                {% if item.image %}
                    <div>
                        {{ media[item.image].loading().html('', item.alt, 'h-auto w-full m-0 brightness-110 contrast-110 saturate-125 shadow-md') |raw }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
