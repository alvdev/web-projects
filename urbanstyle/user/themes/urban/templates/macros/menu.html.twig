{% macro nav_loop(page) %}
    {% for p in page.children.visible %}
        {% set active_page = (p.active or p.activeChild) ? 'active' : '' %}
        <li>
            <a href="{{ p.url }}" class="{{ active_page }} block py-4 text-black hover:text-gray-800">
                {{ p.menu }}
            </a>
            {% if p.children.visible.count > 0 %}
                <ul>
                    {{ macros.nav_loop(p) }}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
{% endmacro %}
