---
import PegadaCarteles from "@/content/services/pegada-de-carteles/index.mdx";
import Header from "@/components/Header.astro";
import Layout from "@/layouts/Base.astro";
import cover from "@/assets/images/header/pegada-de-carteles.webp";
---

<Layout
    cover={cover}
    title="Pegada de carteles en Madrid, Barcelona y resto de España"
    description="La pegada de carteles es lo que nos ha convertido en el actual referente en España. Supervisión día y noche para reponer carteles dañados o tapados."
    schema="website"
>
    <Header
        title="Pegada de carteles en Madrid, Barcelona y resto de España"
        cover={cover}
        coverAlt="Un chico pegando un cartel en una pared"
        loading="eager"
        classes="*:[img]:-top-36 md:*:[img]:-top-12 xl:*:[img]:-top-36"
    />
    <main class="relative z-10 pb-6 pt-28">
        <PegadaCarteles />
    </main>
</Layout>
