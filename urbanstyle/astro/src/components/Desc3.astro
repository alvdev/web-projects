---
const { title, description, subtitle, bgColor, ringColor } = Astro.props;
---

<section class="mt-36">
    <div class:list={["wall-full", "relative", "container-r", "py-28", bgColor, ringColor]}>
        <div class="flex flex-col gap-8 xl:flex-row-reverse xl:gap-16 items-center">
            <hgroup class="flex flex-col gap-8 uppercase text-right lg:text-left drop-shadow-md xl:w-1/2 xl:m-0">
                <h2 class="m-0 text-yellow-200">
                    {title}
                </h2>
                <h3
                    class="font-extrabold border-dashed text-white [text-shadow:2px_2px_2px_black] text-5xl md:text-6xl uppercase xl:m-0"
                >
                    {subtitle}
                </h3>
            </hgroup>
            <p
                class="text-3xl text-white text-opacity-80 leading-normal text-right text-balance font-semibold md:text-4xl xl:w-1/2"
            >
                {description}
            </p>
        </div>
    </div>
</section>
