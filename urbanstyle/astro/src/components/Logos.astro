---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { getCollection } from "astro:content";
const collection = await getCollection("logos");

const { title, subtitle } = Astro.props;
---

<section class="logos container mt-28">
    <hgroup class="mb-16">
        <h2 class="font-semibold md:!leading-tight m-0 text-2xl md:text-3xl lg:text-4xl">
            {title}
        </h2>
        <h3>
            {subtitle}
        </h3>
    </hgroup>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-x-24 gap-y-20">
        {
            collection.map(item =>
                item.data.logos.map(img => <Image src={img.src as ImageMetadata} alt={img.alt} format="avif" />)
            )
        }
    </div>
</section>
