---
import { Image } from "astro:assets";
import dossier from "@/assets/images/urban-dossier.webp";

const { title, classes = "mt-16" } = Astro.props;
---

<article>
    <h2
        set:html={title}
        class="flex items-center text-2xl text-center p-8 border-2 border-dashed border-black rounded !m-0 sm:text-4xl md:text-3xl lg:text-4xl xl:text-2xl xl:p-0 xl:border-none"
    />
    <div
        class={`mt-8 text-center border rounded-xs p-8 px-6 bg-gradient-to-t from-zinc-300 via-white via-40% to-white ${classes}`}
    >
        <Image
            src={dossier}
            class="mx-auto w-full object-cover brightness-110 contrast-110"
            alt="dossier para pegadas de carteles"
            width={200}
            format="avif"
        />

        <a
            href="/dl/dossier-UrbanStylePublicity.pdf"
            target="_blank"
            class="btn block mt-8 px-5 whitespace-nowrap normal-case"
        >
            Descargar dossier <span class="rotate-45 inline-block translate-y-[2px]">&#x2794</span>
        </a>
    </div>
</article>
