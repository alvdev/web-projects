<nav class="gh-head-inner inner gh-container">

    <div class="gh-head-brand">
        {{^is 'home'}}
            <a class="gh-head-logo" href="{{@site.url}}">
                {{#if @site.logo}}
                    {{!-- <img src="{{@site.logo}}" alt="{{@site.title}}" /> --}}
                    {{> 'logo'}}
                {{else}}
                    {{@site.title}}
                {{/if}}
            </a>
        {{/is}}    
        <a class="gh-burger" role="button">
            <div class="gh-burger-box">
                <div class="gh-burger-inner"></div>
            </div>
        </a>
    </div>
    <div class="gh-head-menu">
        {{navigation}}
    </div>
    <div id="search">
        <input id="search-input" type="text" placeholder="{{t 'Search'}}" />
        <a id="search-btn" href="#" title="Search">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 13 13"
        >
            <g stroke-width="2" stroke="#ffffff" fill="none">
            <path d="M11.29 11.71l-4-4"></path>
            <circle cx="5" cy="5" r="4"></circle>
            </g>
        </svg>
        </a>
    </div>
    <div class="gh-head-actions">
        <div class="gh-social">
            {{#if @site.facebook}}
                <a class="gh-social-facebook" href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @site.twitter}}
                <a class="gh-social-twitter" href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
            {{/if}}
        </div>

        {{#unless @member}}
            <a class="gh-head-button" href="#/portal/signup" data-portal="signup">{{t "Subscribe"}}</a>
        {{else}}
            <a class="gh-head-button" href="#/portal/account" data-portal="account">{{ t "Account"}}</a>
        {{/unless}}
    </div>

    {{!-- Search packed by gulp --}}
    {{!-- <script defer src="{{asset "js/lib/ghost-finder.js"}}"></script> --}}
    {{!-- <script defer src="{{asset "js/alvdev-search.js"}}"></script> --}}
    <div id="search-result"></div>

</nav>
