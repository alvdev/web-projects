{% extends "partials/base.html.twig" %}

{% block content %}
    <div class="flex items-center">
        <section
            class="px-8 py-24 w-1/2 text-center">
            {# <h1 class="text-6xl font-semibold">{{ page.title }}</h1> #}
            <h2 class="text-6xl w-full">¡Construyamos algo grande juntos!</h2>
            <p class="mt-12">Utiliza el formulario de contacto para enviarnos tu propuesta</p>
        </section>

        <section class="bg-gray-200 text-center py-24 px-12 w-1/2">
            <h2 class="text-4xl">Formulario de contacto</h2>
            <form action="#" method="post" class="flex flex-col place-items-center gap-8 my-12 text-left">
                <div class="flex gap-8">
                    <div>
                        <label for="" class="uppercase text-sm font-medium text-gray-500 px-1">Nombre</label>
                        <input type="text" class="w-full px-4 py-3 text-xl font-medium rounded focus:outline-none focus:ring focus:ring-gray-300 border-none">
                    </div>
                    <div>
                        <label for="" class="uppercase text-sm font-medium text-gray-500 px-1">Email</label>
                        <input type="text" class="w-full px-4 py-3 text-xl font-medium rounded focus:outline-none focus:ring focus:ring-gray-300 border-none">
                    </div>
                </div>
                <div class="w-full">
                    <label for="" class="uppercase text-sm font-medium text-gray-500 px-1">Motivo de contacto</label>
                    <select name="" id="" class="w-full px-4 py-3 text-xl font-medium rounded focus:outline-none focus:ring focus:ring-gray-300 border-none">
                        <option value="">Alianza estratégica</option>
                        <option value="">Proyecto unificado</option>
                        <option value="">Otras razones</option>
                    </select>
                </div>
                <div class="w-full">
                    <label for="" class="uppercase text-sm font-medium text-gray-500 px-1">Mensaje</label>
                    <textarea type="text" class="w-full px-4 py-3 text-lg rounded focus:outline-none focus:ring focus:ring-gray-300 border-none"></textarea>
                </div>
                <button class="w-1/2 p-3 text-white uppercase bg-black rounded">Enviar formulario</button>
            </form>
        </section>
    </di>

    {{ page.content|raw }}
{% endblock %}
