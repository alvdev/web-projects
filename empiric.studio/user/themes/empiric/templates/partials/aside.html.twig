{% do assets.addJs('theme://js/totop.js', { loading: 'defer' }) %}

{% block aside %}
    <aside class="left-side w-40 h-full fixed top-0 left-0  place-content-between">
        <div class="h-full flex flex-col place-content-between place-items-center">
            <div class="logo flex mx-auto mt-8 w-16">
                {{ svg('image://empiric.svg')|raw }}
            </div>
            {% if page.template == 'blog' or page.template == 'blog-item' %}
                <ul class="text-sm flex flex-col gap-8 uppercase">
                    <li>
                        <a href="#">Category 1</a>
                    </li>
                    <li>
                        <a href="#">Category 2</a>
                    </li>
                    <li>
                        <a href="#">Category 3</a>
                    </li>
                </ul>
            {% else %}
                <ul class="-rotate-90 font-semibold text-sm flex gap-8 uppercase">
                    <li>
                        <a href="#">LinkedIn</a>
                    </li>
                    <li>
                        <a href="#">Facebook</a>
                    </li>
                    <li>
                        <a href="#">Twitter</a>
                    </li>
                </ul>
            {% endif %}
            <a href="#top" id="totop" class="mb-8 invisible">
                {{ svg('theme://images/svg/gotop.svg')|raw }}
            </a>
        </div>
    </aside>
{% endblock %}
